.mode{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background-color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 999999999;
}
.content-wrap{
    width: 100%;
    height: 100vh;
    background: rgba(0,0,0,0.6);
    overflow: hidden;
    display: flex;align-items: center;justify-content: center;
}

.content-wrap button{width: 500rpx;height: 100rpx;background: #04C160;border-radius:8rpx;
    font-size: 34rpx;color: #ffffff;display: flex;align-items: center;justify-content: center;
}